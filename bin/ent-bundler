#!/bin/bash

H() { echo -e "Wrapper for the ENT private installation of the entando bundle tool."; }
[[ "$1" = "-h" && "$2" == "--short" ]] && H && exit 0

WD="$PWD"
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
cd "$DIR/.." || {
  echo "Internal error: unable to find the script source dir" 1>&2
  exit
}
. s/_base.sh

cd "$WD" || FATAL "Unable to access the current dir: $WD"

print_entando_banner
_ent-bundler "$@"
